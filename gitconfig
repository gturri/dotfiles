[core]
    editor = vim
[alias]
    a  = add
    af = add -f
    br = branch
    bra = branch -a
    brd = branch -D
    brf = branch -f
    c = commit
    ca = commit -a
    cam = commit -am
    chp = cherry-pick
    cl = clone
    cm = commit -m
    co = checkout
    co1 = checkout HEAD^
    cob = checkout -b
    cobf = checkout -B
    dif = diff
    difc = diff --cached
    difw = diff --word-diff
    fe = fetch --all
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
    me = merge
    meff = merge --ff-only
    men = merge --no-ff
    re = remote -v
    rh = reset --hard
    ri = rebase -i
    ri2 = rebase -i HEAD^^
    st = status
    tagd = tag -d
    tagf = tag -f
[color]
    ui = auto
[diff]
    mnemonicprefix = true
[gui]
    gcwarning = false
[merge]
    tool = vimdiff
[difftool]
    prompt = false
