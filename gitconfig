    editor = vim
[alias]
    a  = add
    br = branch
    brf = branch -f
    c = commit
    ca = commit -a
    cam = commit -am
    cm = commit -m
    co = checkout
    fe = fetch --all
    re = remote -v
    st = status
    bra = branch -a
    chp = cherry-pick
    cl = clone
    cob = checkout -b
    cobf = checkout -B
    diffc = diff -c
    me = merge
    men = merge --no-ff
    rh = reset --hard
    ri = rebase -i
    ri2 = rebase -i HEAD^^
    tagf = tag -f
