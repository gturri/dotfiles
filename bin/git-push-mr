#!/usr/bin/env bash

if [ $# -ne 1 ]; then
  echo "expected the number of the merge request"
  exit -1
fi

idMR=$1
branchName=mr${idMR}
destBranch=ReadyForProduction

git fetch origin
git checkout origin/${destBranch}
git merge --no-ff ${branchName}

echo "Fix merge if needed"
./internal/pause.sh

git push origin HEAD:${destBranch}



